<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 
        PlayerView: Main video surface
        CRITICAL FOR TV: Set focusable="false" so it doesn't steal focus from control buttons
        INTERACTS WITH: MainActivity.java setupPlayer() and onKeyDown()
    -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:show_buffering="when_playing"
        app:use_controller="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <!-- 
        SKIP BUTTONS OVERLAY CONTAINER
        All Buttons below use SkipButton style which includes:
        - android:focusable="true" (allows D-pad navigation)
        - android:clickable="true" (allows D-pad center button to click)
        - android:background="@drawable/skip_button_background" (changes to white when focused)
        CRITICAL FOR TV: These buttons are wired into the main focus graph
        - Access from main controls: btnNext (RIGHT) and btnButton5 (RIGHT) point to btnSkipIntro
        - These buttons navigate UP/DOWN within the skip stack
        - LEFT from any skip button returns to main controls (btnNext)
        INTERACTS WITH: MainActivity.java updateSkipButtons() for visibility and setupClickListeners() for click handling
        BEHAVIOR: Buttons appear/disappear based on current playback position and skip markers
    -->
    <LinearLayout
        android:id="@+id/skipButtonsOverlayContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="64dp" 
        android:layout_marginEnd="20dp" 
        android:orientation="vertical"
        android:gravity="end">

        <Button 
            android:id="@+id/btnSkipIntro" 
            style="@style/SkipButton" 
            android:text="@string/skip_intro" 
            android:visibility="gone"
            android:nextFocusLeft="@id/btnNext"
            android:nextFocusRight="@id/btnSkipIntro"
            android:nextFocusUp="@id/btnSkipIntro"
            android:nextFocusDown="@id/btnSkipRecap" />
            
        <Button 
            android:id="@+id/btnSkipRecap" 
            style="@style/SkipButton" 
            android:layout_marginTop="8dp" 
            android:text="@string/skip_recap" 
            android:visibility="gone"
            android:nextFocusLeft="@id/btnNext"
            android:nextFocusRight="@id/btnSkipRecap"
            android:nextFocusUp="@id/btnSkipIntro"
            android:nextFocusDown="@id/btnSkipCredits" />
            
        <Button 
            android:id="@+id/btnSkipCredits" 
            style="@style/SkipButton" 
            android:layout_marginTop="8dp" 
            android:text="@string/skip_credits" 
            android:visibility="gone"
            android:nextFocusLeft="@id/btnNext"
            android:nextFocusRight="@id/btnSkipCredits"
            android:nextFocusUp="@id/btnSkipRecap"
            android:nextFocusDown="@id/btnNextEpisode" />
            
        <Button 
            android:id="@+id/btnNextEpisode" 
            style="@style/SkipButton" 
            android:layout_marginTop="8dp" 
            android:text="@string/next_episode" 
            android:visibility="gone"
            android:nextFocusLeft="@id/btnNext"
            android:nextFocusRight="@id/btnNextEpisode"
            android:nextFocusUp="@id/btnSkipCredits"
            android:nextFocusDown="@id/btnNextEpisode" />
    </LinearLayout>

    <!-- 
        Custom Controls Container
        CRITICAL FOR TV: descendantFocusability set to allow buttons inside to receive focus
        INTERACTS WITH: MainActivity.java toggleControls() and all control buttons
    -->
    <RelativeLayout
        android:id="@+id/customControls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="gone"
        android:descendantFocusability="afterDescendants">

        <TextView
            android:id="@+id/currentTimeOfDay"
            style="@style/TimeText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="3:39 PM" />
            
        <TextView
            android:id="@+id/finishTime"
            style="@style/TimeText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="3:59 PM" />


        <LinearLayout
            android:id="@+id/bottomControlsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/control_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <!-- 
                    ProgressBar: Shows playback progress and allows seeking
                    CRITICAL FOR TV: Added focusable/clickable to enable D-pad seeking
                    CRITICAL FOR TV: nextFocusDown points to btnPlayPause (main control)
                    INTERACTS WITH: MainActivity.java setupProgressBarSeeking() and new D-pad key handler
                    D-PAD BEHAVIOR: Left/Right arrows seek backward/forward when focused
                -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp" 
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/colorAccent"
                    android:secondaryProgressTint="@color/semi_transparent"
                    android:focusable="true"
                    android:clickable="true"
                    android:nextFocusDown="@id/btnPlayPause"
                    android:nextFocusLeft="@id/btnPlayPause"
                    android:nextFocusRight="@id/btnPlayPause" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView android:id="@+id/elapsedTime" style="@style/TimeText" android:textSize="16sp" android:text="02:23" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" / " android:textColor="@android:color/white" android:textSize="16sp" />
                        <TextView android:id="@+id/totalTime" style="@style/TimeText" android:textSize="16sp" android:text="22:35" />
                    </LinearLayout>
                    
                    <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                    
                    <TextView android:id="@+id/remainingTime" style="@style/TimeText" android:textSize="16sp" android:text="-20:11" />
                </LinearLayout>

            </LinearLayout>


            <!-- 
                PLAYBACK CONTROL BUTTONS
                All ImageButtons below use ControlButton styles which include:
                - android:focusable="true" (allows D-pad navigation)
                - android:clickable="true" (allows D-pad center button to click)
                - android:background="@drawable/control_button_background" (shows white circle when focused)
                CRITICAL FOR TV: These inherited attributes enable TV remote control navigation
                INTERACTS WITH: MainActivity.java setupClickListeners() for click handling
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"> 

                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

                <!-- 
                    MAIN PLAYBACK CONTROL BUTTONS ROW
                    CRITICAL FOR TV: Each button has explicit nextFocus* attributes for D-pad navigation
                    NAVIGATION MAP: Previous <-> Rewind <-> PlayPause <-> FastForward <-> Next
                    UP from any button: ProgressBar
                    DOWN from any button: Settings row (btnSettings in center)
                -->
                <ImageButton 
                    android:id="@+id/btnPrevious" 
                    style="@style/ControlButton.Small" 
                    android:src="@android:drawable/ic_media_previous" 
                    android:contentDescription="Previous"
                    android:nextFocusLeft="@id/btnPrevious"
                    android:nextFocusRight="@id/btnRewind"
                    android:nextFocusUp="@id/progressBar"
                    android:nextFocusDown="@id/btnSubtitles" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                
                <ImageButton 
                    android:id="@+id/btnRewind" 
                    style="@style/ControlButton.Small" 
                    android:src="@android:drawable/ic_media_rew" 
                    android:contentDescription="Rewind"
                    android:nextFocusLeft="@id/btnPrevious"
                    android:nextFocusRight="@id/btnPlayPause"
                    android:nextFocusUp="@id/progressBar"
                    android:nextFocusDown="@id/btnSettings" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

                <!-- 
                    Play/Pause button - This receives focus first when controls appear
                    CRITICAL FOR TV: Center button in main control row, wired to all neighbors
                -->
                <ImageButton 
                    android:id="@+id/btnPlayPause" 
                    style="@style/ControlButton" 
                    android:layout_width="45dp" 
                    android:layout_height="45dp" 
                    android:src="@android:drawable/ic_media_pause" 
                    android:contentDescription="Play/Pause"
                    android:nextFocusLeft="@id/btnRewind"
                    android:nextFocusRight="@id/btnFastForward"
                    android:nextFocusUp="@id/progressBar"
                    android:nextFocusDown="@id/btnSettings" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

                <ImageButton 
                    android:id="@+id/btnFastForward" 
                    style="@style/ControlButton.Small" 
                    android:src="@android:drawable/ic_media_ff" 
                    android:contentDescription="Fast Forward"
                    android:nextFocusLeft="@id/btnPlayPause"
                    android:nextFocusRight="@id/btnNext"
                    android:nextFocusUp="@id/progressBar"
                    android:nextFocusDown="@id/btnPlaybackSpeed" />
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
                
                <ImageButton 
                    android:id="@+id/btnNext" 
                    style="@style/ControlButton.Small" 
                    android:src="@android:drawable/ic_media_next" 
                    android:contentDescription="Next"
                    android:nextFocusLeft="@id/btnFastForward"
                    android:nextFocusRight="@id/btnSkipIntro"
                    android:nextFocusUp="@id/progressBar"
                    android:nextFocusDown="@id/btnButton5" />
                
                <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>

            </LinearLayout>

            <!-- 
                SETTINGS AND ADJUSTMENT BUTTONS
                All ImageButtons below use ControlButton.Tiny style which inherits:
                - android:focusable="true" (allows D-pad navigation)
                - android:clickable="true" (allows D-pad center button to click)
                - android:background="@drawable/control_button_background" (shows white circle when focused)
                CRITICAL FOR TV: These inherited attributes enable TV remote control navigation
                INTERACTS WITH: MainActivity.java setupClickListeners() for click handling
            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <!-- 
                    SETTINGS ROW BUTTONS
                    CRITICAL FOR TV: Each button has explicit nextFocus* attributes for complete D-pad navigation
                    NAVIGATION MAP: Subtitles <-> Settings <-> (gap) <-> PlaybackSpeed <-> AudioDelay <-> SubtitleDelay <-> Button4 <-> Button5
                    UP from any button: Main control row (corresponding button above)
                    DOWN from any button: Stay on same button (bottom row)
                -->
                <ImageButton 
                    android:id="@+id/btnSubtitles" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_sort_by_size" 
                    android:contentDescription="@string/subtitles"
                    android:nextFocusLeft="@id/btnSubtitles"
                    android:nextFocusRight="@id/btnSettings"
                    android:nextFocusUp="@id/btnPrevious"
                    android:nextFocusDown="@id/btnSubtitles" />
                    
                <ImageButton 
                    android:id="@+id/btnSettings" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_preferences" 
                    android:contentDescription="@string/settings"
                    android:nextFocusLeft="@id/btnSubtitles"
                    android:nextFocusRight="@id/btnPlaybackSpeed"
                    android:nextFocusUp="@id/btnPlayPause"
                    android:nextFocusDown="@id/btnSettings" />

                <Space android:layout_width="10dp" android:layout_height="match_parent" />

                <ImageButton 
                    android:id="@+id/btnPlaybackSpeed" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_recent_history" 
                    android:contentDescription="@string/playback_speed"
                    android:nextFocusLeft="@id/btnSettings"
                    android:nextFocusRight="@id/btnAudioDelay"
                    android:nextFocusUp="@id/btnPlayPause"
                    android:nextFocusDown="@id/btnPlaybackSpeed" />
                    
                <ImageButton 
                    android:id="@+id/btnAudioDelay" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_lock_silent_mode_off" 
                    android:contentDescription="@string/audio_delay"
                    android:nextFocusLeft="@id/btnPlaybackSpeed"
                    android:nextFocusRight="@id/btnSubtitleDelay"
                    android:nextFocusUp="@id/btnPlayPause"
                    android:nextFocusDown="@id/btnAudioDelay" />
                    
                <ImageButton 
                    android:id="@+id/btnSubtitleDelay" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_edit" 
                    android:contentDescription="@string/subtitle_delay"
                    android:nextFocusLeft="@id/btnAudioDelay"
                    android:nextFocusRight="@id/btnButton4"
                    android:nextFocusUp="@id/btnFastForward"
                    android:nextFocusDown="@id/btnSubtitleDelay" />
                    
                <ImageButton 
                    android:id="@+id/btnButton4" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_report_image" 
                    android:contentDescription="Button 4"
                    android:nextFocusLeft="@id/btnSubtitleDelay"
                    android:nextFocusRight="@id/btnButton5"
                    android:nextFocusUp="@id/btnFastForward"
                    android:nextFocusDown="@id/btnButton4" />
                    
                <ImageButton 
                    android:id="@+id/btnButton5" 
                    style="@style/ControlButton.Tiny" 
                    android:src="@android:drawable/ic_menu_crop" 
                    android:contentDescription="Button 5"
                    android:nextFocusLeft="@id/btnButton4"
                    android:nextFocusRight="@id/btnSkipIntro"
                    android:nextFocusUp="@id/btnNext"
                    android:nextFocusDown="@id/btnButton5" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
